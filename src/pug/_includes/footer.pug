-
	content.menu.pop();
	var menu = content.menu
footer.footer
	.footer-copy
		picture
			source(srcset="/img/ok_logo--footer.webp, /img/ok_logo--footer_x2.png 2x")
			img.footer-logo(src="/img/ok_logo--footer.png" alt="группа ок лого" loading="lazy")
		.footer-text
			h3.footer-title Группа "ОченьКрасивые" © 2020
			.footer-contacts
				a(href="tel:" + content.contacts.phone) #{content.contacts.phone}
	nav.footer-menu
		each item in menu
			a.footer-menu__link(href=item.url rel=(item.url.indexOf('//') == -1 ? false : "noopener noreferrer nofollow")) #{item.title}
	.footer-right
		a.top-btn(href="#hero")
			+svg('', 'arrow-up', 'Наверх', 'Стрелка вверх', 50, 50)
			span Наверх
